{
    "name": "gorghoa/scenariostate-behat-extension",
    "type": "behat-extension",
    "description": "Scenario shared state extension for Behat",
    "keywords": ["behat", "bdd", "stateless api testing"],
    "license": "MIT",
    "authors": [
        {
            "name": "Rodrigue Villetard",
            "email": "rodrigue.villetard@gmail.com"
        }
    ],

    "require": {
        "php": ">=5.5",
        "behat/behat": "^3.0.12",
        "symfony/process": "^2.0"
    },

    "require-dev": {
        "phpspec/phpspec": "~2.0",
        "phpunit/phpunit": "~4.0"
    },

    "autoload": {
        "psr-4": {
            "Gorghoa\\ScenarioStateBehatExtension\\": "src/",
            "Symfony\\Component\\Process\\": "vendor/symfony/process/"
        }
    }
}
